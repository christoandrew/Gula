<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/color_primary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/color_primary_dark</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/color_primary_accent</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

    </style>

    <style name="MultiChoiceAdapter_DefaultSelectedItemStyle">
        <item name="itemClickInActionMode">selectItem</item>
    </style>

    <style name="MultiChoiceAdapter_DefaultCheckableImageViewStyle">
        <item name="android:foreground">@drawable/mca__gallery_selector</item>
    </style>
</resources>
