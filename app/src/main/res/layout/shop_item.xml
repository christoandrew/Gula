<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/shop_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/img1" />

    <TextView
        android:id="@+id/shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/shop_image"
        android:layout_toRightOf="@+id/shop_image"
        android:padding="4dp"
        android:text="Gula Enterprises"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/shop_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop_category"
        android:layout_toEndOf="@+id/shop_image"
        android:layout_toRightOf="@+id/shop_image"
        android:ellipsize="marquee"
        android:minLines="1"
        android:paddingLeft="4dp"
        android:singleLine="true"
        android:text="@string/carddemo_extras_title_base_stag2"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/shop_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop_description"
        android:layout_toEndOf="@+id/shop_image"

        android:layout_toRightOf="@+id/shop_image"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="Kampala"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/shop_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop_name"
        android:layout_toEndOf="@+id/shop_image"
        android:layout_toRightOf="@+id/shop_image"
        android:paddingLeft="4dp"
        android:text="Deals in Clothing"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/md_purple_300"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/shop_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</RelativeLayout>